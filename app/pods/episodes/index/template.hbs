<form class="form-inline">
  {{input type="text" key-up="updateFilterTerm" placeholder="Search..." classNames="form-control"}}

  {{#x-select classNames='form-control' action='updateFilterField' value=filterField as |xs|}}
    {{#each filterFields as |field|}}
      {{#xs.option value=field.value}}{{field.label}}{{/xs.option}}
    {{/each}}
  {{/x-select}}

  {{#if showLoadingState}}
    <div class="spinner">
      <div class="rect1"></div>
      <div class="rect2"></div>
      <div class="rect3"></div>
      <div class="rect4"></div>
      <div class="rect5"></div>
    </div>
  {{/if}}

  {{!-- Disable episode creation for now --}}
  {{!-- {{#if session.isAuthenticated}}
    {{link-to 'Add Episode' 'episodes.new' class="btn btn-success"}}
  {{/if}} --}}

  <p class="missing-info">
    {{#if settings.episodesShowGrid}}
      <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
    {{else}}
      <span class="color-box"></span>
    {{/if}}
    : May be missing some info
  </p>
</form>

{{episodes-display
  episodes=filteredEpisodes
  filterTerm=filterTerm
  filterField=filterField
}}
