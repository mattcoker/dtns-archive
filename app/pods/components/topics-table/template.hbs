<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th class="text-center col-sm-3">Name</th>
      <th class="text-center col-sm-5">Description</th>
      <th class="text-center col-sm-2">Number of Episodes</th>
      <th class="text-center col-sm-2 no-hover"></th>
    </tr>
  </thead>
  <tbody>
    {{#each topics as |topic|}}
      <tr>
        <td class="text-left">
          {{topic.name}}
        </td>

        <td class="text-left" title="{{topic.description}}">
            {{{truncate topic.description 140}}}
        </td>

        <td class="text-center">
          {{topic.episodes.length}}
        </td>

        <td class="text-center">
          {{link-to 'View' 'topic.index' topic.slug}}
          {{#if session.isAuthenticated}}
            | {{link-to 'Edit' 'topic.edit' topic.slug}}
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
