<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th class="text-center {{if session.isAuthenticated 'col-sm-2' 'col-sm-3'}}">Name</th>
      <th class="text-center col-sm-3">Category</th>
      <th class="text-center col-sm-4">Description</th>
      <th class="text-center col-sm-1">URL</th>
      <th class="text-center col-sm-1">Episode</th>
      <th class="text-center col-sm-2 no-hover"></th>
    </tr>
  </thead>
  <tbody>
    {{#each picks as |pick|}}
      <tr>
        <td class="text-left">
          {{pick.name}}
        </td>

        <td class="text-left">
          {{pick.category}}
        </td>

        <td class="text-left" title="{{pick.description}}">
            {{{truncate pick.description 140}}}
        </td>

        <td class="text-center episode-labels">
          <a href="{{pick.url}}" target="_blank">Link</a>
        </td>

        <td class="text-center">
          {{#if pick.episode}}
            {{link-to (concat '#' pick.episode.episodeNumber) 'episode.index' pick.episode.id tagName='span' classNames='label label-default'}}
          {{else}}
            <span class="text-muted">none</span>
          {{/if}}
        </td>

        {{#if session.isAuthenticated}}
          <td class="text-center">
            {{link-to 'Edit' 'pick.edit' pick.id}}
          </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>
