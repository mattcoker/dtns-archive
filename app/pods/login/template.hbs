<form class="form-horizontal pa-0 col-md-6 col-md-offset-3 no-padding">
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type='text' class="form-control" placeholder='Email Address' value=email}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      {{input type='password' class="form-control" placeholder="Password" value=password}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" {{action 'loginUser' email password}}>Login</button>
    </div>
  </div>
</form>
